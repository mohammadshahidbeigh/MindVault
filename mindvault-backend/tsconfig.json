{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,                    // This line helps to bypass type-checking in node_modules
    "forceConsistentCasingInFileNames": true
  }
}
